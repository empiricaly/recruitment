{
  "name": "empirica-recruitment",
  "version": "0.1.0",
  "license": "MPL-2.0",
  "scripts": {
    "build": "yarn build:tailwind && rollup -c",
    "rollup": "rollup -c -w",
    "dev": "run-p rollup watch:tailwind",
    "dev:livereload": "cross-env LIVERELOAD=1 rollup -c -w",
    "nollup": "cross-env NOLLUP=1 nollup -c --hot --port 5000 --content-base ./public --history-api-fallback",
    "dev:nollup": "run-p nollup watch:tailwind",
    "start": "sirv public",
    "watch:tailwind": "postcss src/style.css -o public/build/index.css -w",
    "build:tailwind": "NODE_ENV=production postcss src/style.css -o public/build/index.css"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "2.2.0",
    "@rollup/plugin-commonjs": "11.0.2",
    "@rollup/plugin-node-resolve": "7.1.3",
    "autoprefixer": "9.8.0",
    "cross-env": "6.0.3",
    "cssnano": "4.1.10",
    "nollup": "0.11.1",
    "npm-run-all": "4.1.5",
    "postcss-cli": "7.1.1",
    "postcss-import": "12.0.1",
    "postcss-preset-env": "6.7.0",
    "rollup": "2.10.8",
    "rollup-plugin-hot": "0.1.0",
    "rollup-plugin-livereload": "1.3.0",
    "rollup-plugin-replace": "2.2.0",
    "rollup-plugin-svelte-hot": "0.10.0",
    "rollup-plugin-terser": "7.0.2",
    "svelte": "3.27.0",
    "tailwindcss": "1.9.5"
  },
  "dependencies": {
    "@apollo/client": "3.2.1",
    "@editorjs/editorjs": "2.18.0",
    "@tailwindcss/ui": "0.6.2",
    "chrono-node": "2.1.8",
    "codemirror": "5.56.0",
    "dayjs": "1.8.29",
    "graphql": "15.0.0",
    "history": "4.10.1",
    "hotkeys-js": "3.8.1",
    "path-to-regexp": "6.1.0",
    "sirv-cli": "0.4.6",
    "streamsaver": "^2.0.5",
    "subscriptions-transport-ws": "0.9.17",
    "svelte-apollo": "0.3.0",
    "tippy.js": "6.2.5"
  }
}
